<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"></LinearLayout>

    <RelativeLayout
        android:id="@+id/temp_right_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3">

        <TextView
            android:id="@+id/textview_message_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="-2dp"
            android:layout_toLeftOf="@+id/textview_right_arrow"
            android:background="@drawable/drawble_right_round"
            android:minHeight="50dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textview_right_arrow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/drawable_right_arrow" />


    </RelativeLayout>

</LinearLayout>