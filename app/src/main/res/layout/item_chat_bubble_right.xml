<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_message_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/temp_right_arrow"
        android:background="@drawable/drawble_left_round"
        android:minHeight="50dp"
        android:textColor="?android:textColorPrimary"
        android:textSize="12sp" />


    <RelativeLayout
        android:id="@+id/temp_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/drawable_right_arrow" />
    </RelativeLayout>

</RelativeLayout>