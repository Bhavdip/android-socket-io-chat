<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/image_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top"
            app:siShape="@drawable/octogon"
            app:siSquare="true" />

        <include layout="@layout/item_chat_bubble_left"></include>
    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/username8"
            android:textSize="8dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/receiver_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/app_name"
            android:textColor="@color/gray_user_name"
            android:textSize="8dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/receiver_msg_status"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/drawable_unread_cirlce" />
    </LinearLayout>
</LinearLayout>